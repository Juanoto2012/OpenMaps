<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/spacing_medium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="@dimen/handle_bar_width"
        android:layout_height="@dimen/handle_bar_height"
        android:layout_gravity="center"
        android:background="?android:attr/textColorSecondary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/drawable_padding"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/avoid_route_options"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_title"
                android:textColor="?android:attr/textColorPrimary"
                android:paddingTop="@dimen/drawable_padding"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_tolls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/avoid_tolls"
                android:textColor="?android:attr/textColorPrimary"
                android:drawableStart="@drawable/ic_toll"
                android:drawableTint="?android:attr/textColorPrimary"
                android:drawablePadding="@dimen/drawable_padding"
                android:textSize="@dimen/text_size_subhead"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_motorways"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:text="@string/avoid_motorways"
                android:drawableStart="@drawable/ic_road"
                android:drawableTint="?android:attr/textColorPrimary"
                android:drawablePadding="@dimen/drawable_padding"
                android:textSize="@dimen/text_size_subhead"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_ferries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:text="@string/avoid_ferries"
                android:drawableStart="@drawable/ic_ferry"
                android:drawableTint="?android:attr/textColorPrimary"
                android:drawablePadding="@dimen/drawable_padding"
                android:textSize="@dimen/text_size_subhead"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_medium">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/route_options"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_title"
                android:textColor="?android:attr/textColorPrimary"
                android:paddingTop="@dimen/drawable_padding"/>

            <RadioGroup
                android:id="@+id/route_type_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fastest"
                    android:textColor="?android:attr/textColorPrimary"
                    android:checked="true"
                    android:text="@string/fastest_route"
                    android:textSize="@dimen/text_size_subhead"
                    android:layout_marginTop="@dimen/drawable_padding"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shortest"
                    android:textColor="?android:attr/textColorPrimary"
                    android:text="@string/shortest_route"
                    android:textSize="@dimen/text_size_subhead"
                    android:layout_marginStart="@dimen/drawable_padding"
                    android:layout_marginTop="@dimen/drawable_padding"/>
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_medium">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/download_maps_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/download_offline_maps"
            app:icon="@drawable/ic_download_maps"
            app:iconTint="@color/white"
            android:textColor="@color/white"
            app:backgroundTint="?attr/colorPrimary"
            android:layout_marginEnd="@dimen/handle_bar_height"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear_cache_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/clear_downloaded_maps"
            app:icon="@drawable/ic_delete"
            app:iconTint="@color/white"
            android:textColor="@color/white"
            app:backgroundTint="?attr/colorPrimary"
            android:layout_marginStart="@dimen/handle_bar_height"/>
    </LinearLayout>
</LinearLayout>